<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product.presentation.productDetails.ui.ProductDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/progressBar_deatils"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_16sdp"
                    android:indeterminateTint="@color/primary_color"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_16sdp"
                    android:backgroundTint="@color/primary_color"
                    android:contentDescription="@string/image"
                    android:src="@drawable/baseline_edit_24"
                    app:fabSize="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:tint="@color/white" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:backgroundTint="@color/primary_color"
                    android:contentDescription="@string/image"
                    android:src="@drawable/baseline_done_all_24"
                    android:visibility="gone"
                    app:fabSize="normal"
                    app:layout_constraintBottom_toTopOf="@id/btn_edit"
                    app:layout_constraintStart_toStartOf="@id/btn_edit"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/image_view_back"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:contentDescription="@string/image"
                    android:src="@drawable/baseline_arrow_back_ios_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="@string/product_details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp"
                    app:layout_constraintBottom_toBottomOf="@id/image_view_back"
                    app:layout_constraintStart_toEndOf="@id/image_view_back"
                    app:layout_constraintTop_toTopOf="@id/image_view_back" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_view_detailed_product"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:contentDescription="@string/image"
                    android:scaleType="centerInside"
                    android:src="@drawable/loading"
                    app:layout_constraintTop_toBottomOf="@id/products"
                    app:shapeAppearance="@style/CornerCut" />


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_40sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_4sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_view_detailed_product"
                    app:strokeColor="@color/primary_color"
                    app:strokeWidth="@dimen/_1sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_16sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/andika"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/product_name"
                                android:textColor="@color/primary_color"
                                android:textSize="@dimen/_12ssp" />

                            <EditText
                                android:id="@+id/edit_text_detailed_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="@dimen/_4sdp"
                                android:layout_marginVertical="@dimen/_4sdp"
                                android:autofillHints="name"
                                android:enabled="false"
                                android:fontFamily="@font/andika"
                                android:hint="@string/white_space"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/vendor"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/andika"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/vendor"
                                android:textColor="@color/primary_color"
                                android:textSize="@dimen/_12ssp" />

                            <EditText
                                android:id="@+id/edit_text_vendor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="@dimen/_4sdp"
                                android:layout_marginVertical="@dimen/_4sdp"
                                android:autofillHints="name"
                                android:enabled="false"
                                android:fontFamily="@font/andika"
                                android:hint="@string/white_space"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginVertical="@dimen/_4sdp"
                                android:fontFamily="@font/andika"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/description"
                                android:textColor="@color/primary_color"
                                android:textSize="@dimen/_12ssp" />

                            <EditText
                                android:id="@+id/edit_text_detailed_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="@dimen/_4sdp"
                                android:layout_marginVertical="@dimen/_4sdp"
                                android:autofillHints="name"
                                android:enabled="false"
                                android:fontFamily="@font/andika"
                                android:hint="@string/white_space"
                                android:inputType="text"
                                android:maxEms="15"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/type"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/andika"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/type"
                                android:textColor="@color/primary_color"
                                android:textSize="@dimen/_12ssp" />

                            <EditText
                                android:id="@+id/edit_text_detailed_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="@dimen/_4sdp"
                                android:layout_marginVertical="@dimen/_4sdp"
                                android:autofillHints="name"
                                android:enabled="false"
                                android:fontFamily="@font/andika"
                                android:hint="@string/white_space"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/size"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/andika"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/variant"
                                android:textColor="@color/primary_color"
                                android:textSize="@dimen/_12ssp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_4sdp"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/item_detailed_product_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/quantity"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/andika"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/quantity"
                                android:textColor="@color/primary_color"
                                android:textSize="@dimen/_12ssp" />

                            <EditText
                                android:id="@+id/edit_text_detailed_quantity"
                                android:layout_width="@dimen/_170sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="@dimen/_4sdp"
                                android:layout_marginVertical="@dimen/_4sdp"
                                android:autofillHints="name"
                                android:enabled="false"
                                android:fontFamily="@font/andika"
                                android:hint="@string/select_size_first"
                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />

                            <ImageView
                                android:id="@+id/image_view_edit"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="@dimen/_8sdp"
                                android:contentDescription="@string/image"
                                android:src="@drawable/baseline_edit_24" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/images"
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginVertical="@dimen/_4sdp"
                                android:fontFamily="@font/andika"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/images"
                                android:textColor="@color/primary_color"
                                android:textSize="@dimen/_12ssp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_image"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_130sdp"
                                android:layout_marginHorizontal="@dimen/_4sdp"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/item_detailed_product_images" />
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>